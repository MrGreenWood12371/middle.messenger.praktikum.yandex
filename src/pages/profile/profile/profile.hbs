<main class="main-wrapper">
  <div class="profile">
    <nav class="profile__nav">
      <a href="/src/pages/chat/chat.hbs" class="profile__nav-link">
        <img
          alt="назад"
          src="{{prevButtonImage}}"
          class="profile__nav-link-image"
        />
      </a>
    </nav>
    <div class="profile__main">
      {{{Avatar imageSrc=profileImage name="Иван"}}}
      <ul class="profile__data-list">
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Почта"
            defaultValue="pochta@yandex.ru"
          }}}
        </li>
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Логин"
            defaultValue="ivanivanov"
          }}}
        </li>
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Имя"
            defaultValue="Иван"
          }}}
        </li>
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Фамилия"
            defaultValue="Иванов"
          }}}
        </li>
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Имя в чате"
            defaultValue="Иван"
          }}}
        </li>
        <li class="profile__data-item">
          {{{LabeledInput
            containerClass="profile__data-field input_disabled"
            type="text"
            value="Телефон"
            defaultValue="+7 (909) 967 30 30"
          }}}
        </li>
      </ul>
      <ul class="profile__links">
        <li class="profile__link">
          {{{Link href="../edit-data/edit-data.hbs" value="Изменить данные"}}}
        </li>
        <li class="profile__link">
          {{{Link
            href="../edit-password/edit-password.hbs"
            value="Изменить пароль"
          }}}
        </li>
        <li class="profile__link">
          {{{Link href="/src/index.hbs" value="Выйти" mod="link_red"}}}
        </li>
      </ul>
    </div>
  </div>
</main>
